  "step": [
    {
      "@type": "HowToStep",
      "position": 1,
      "name": "Safety First - Turn Off Power",
      "text": "Go to your circuit breaker panel and turn off the power to the room where you'll be working. Test the wires with a voltage tester to ensure they're not live.",
      "image": "https://example.com/images/step1-turn-off-power.jpg"
    },
    {
      "@type": "HowToStep",
      "position": 2,
      "name": "Remove Old Fixture",
      "text": "Remove the old light fixture by unscrewing the mounting screws and disconnecting the wires. Note how the wires were connected for reference.",
      "image": "https://example.com/images/step2-remove-old-fixture.jpg"
    },
    {
      "@type": "HowToStep",
      "position": 3,
      "name": "Install Mounting Bracket",
      "text": "Install the mounting bracket that comes with your new fixture. Secure it to the electrical box using the provided screws.",
      "image": "https://example.com/images/step3-install-bracket.jpg"
    },
    {
      "@type": "HowToStep",
      "position": 4,
      "name": "Connect Wires",
      "text": "Connect the wires: black to black (hot), white to white (neutral), and ground to ground. Use wire nuts to secure the connections and wrap with electrical tape.",
      "image": "https://example.com/images/step4-connect-wires.jpg"
    },
    {
      "@type": "HowToStep",
      "position": 5,
      "name": "Attach Fixture",
      "text": "Carefully attach the new fixture to the mounting bracket, making sure not to pinch any wires. Secure with the provided mounting screws.",
      "image": "https://example.com/images/step5-attach-fixture.jpg"
    },
    {
      "@type": "HowToStep",
      "position": 6,
      "name": "Install Bulbs and Test",
      "text": "Install the light bulbs, turn the power back on at the circuit breaker, and test the fixture to ensure it's working properly.",
      "image": "https://example.com/images/step6-test-fixture.jpg"
    }
  ],
