{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmprofiles.org/product-offer/v1/output.schema.json",
  "title": "Product Offer Extracted Content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the product"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Product name"
    },
    "description": {
      "type": "string",
      "description": "Product description"
    },
    "brand": {
      "type": "string",
      "description": "Product brand name"
    },
    "category": {
      "type": "string",
      "description": "Product category"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Image URL"
          },
          "alt": {
            "type": "string",
            "description": "Image alt text"
          },
          "isPrimary": {
            "type": "boolean",
            "description": "Whether this is the primary product image"
          }
        },
        "required": ["url"]
      },
      "description": "Product images"
    },
    "offers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["price", "currency", "availability"],
        "properties": {
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Product price"
          },
          "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$",
            "description": "Currency code (ISO 4217)"
          },
          "originalPrice": {
            "type": "number",
            "minimum": 0,
            "description": "Original price before discount"
          },
          "availability": {
            "type": "string",
            "enum": ["InStock", "OutOfStock", "PreOrder", "Discontinued"],
            "description": "Product availability status"
          },
          "seller": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Seller name"
              },
              "url": {
                "type": "string",
                "format": "uri",
                "description": "Seller website"
              }
            },
            "required": ["name"]
          },
          "shipping": {
            "type": "object",
            "properties": {
              "cost": {
                "type": "number",
                "minimum": 0,
                "description": "Shipping cost"
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$",
                "description": "Shipping cost currency"
              },
              "method": {
                "type": "string",
                "description": "Shipping method"
              },
              "deliveryTime": {
                "type": "string",
                "description": "Estimated delivery time"
              }
            }
          },
          "warranty": {
            "type": "string",
            "description": "Warranty information"
          },
          "returnPolicy": {
            "type": "string",
            "description": "Return policy information"
          }
        }
      },
      "description": "Product offers with pricing and availability"
    },
    "specifications": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Product specifications and features"
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Variant identifier"
          },
          "name": {
            "type": "string",
            "description": "Variant name"
          },
          "attributes": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Variant attributes (color, size, etc.)"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Variant price"
          },
          "availability": {
            "type": "string",
            "enum": ["InStock", "OutOfStock", "PreOrder"],
            "description": "Variant availability"
          }
        },
        "required": ["id", "name"]
      },
      "description": "Product variants (colors, sizes, etc.)"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the product page"
    },
    "sku": {
      "type": "string",
      "description": "Stock keeping unit"
    },
    "mpn": {
      "type": "string",
      "description": "Manufacturer part number"
    },
    "gtin": {
      "type": "string",
      "description": "Global Trade Item Number"
    }
  },
  "required": ["id", "name", "offers", "url"],
  "additionalProperties": false
}

