{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmprofiles.org/profiles/business/review/v1/output.schema.json",
  "title": "Review Extracted Content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the review"
    },
    "title": {
      "type": "string",
      "description": "Review title"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "description": "Review text content"
    },
    "rating": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Rating value (0-5)"
        },
        "maxValue": {
          "type": "number",
          "minimum": 1,
          "default": 5,
          "description": "Maximum rating value"
        },
        "scale": {
          "type": "string",
          "enum": ["1-5", "1-10", "1-100"],
          "default": "1-5",
          "description": "Rating scale"
        }
      }
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Reviewer name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Reviewer profile URL"
        },
        "verified": {
          "type": "boolean",
          "description": "Whether the reviewer is verified"
        }
      }
    },
    "itemReviewed": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the reviewed item"
        },
        "type": {
          "type": "string",
          "enum": ["Product", "Service", "Restaurant", "Business", "Book", "Movie", "Game"],
          "description": "Type of reviewed item"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to the reviewed item"
        },
        "brand": {
          "type": "string",
          "description": "Brand of the reviewed item"
        }
      }
    },
    "pros": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Positive aspects mentioned in the review"
    },
    "cons": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Negative aspects mentioned in the review"
    },
    "helpfulness": {
      "type": "object",
      "properties": {
        "helpful": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of helpful votes"
        },
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of votes"
        }
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Image URL"
          },
          "alt": {
            "type": "string",
            "description": "Image alt text"
          },
          "caption": {
            "type": "string",
            "description": "Image caption"
          }
        },
        "required": ["url"]
      },
      "description": "Images included in the review"
    },
    "datePublished": {
      "type": "string",
      "format": "date",
      "description": "When the review was published"
    },
    "dateUpdated": {
      "type": "string",
      "format": "date",
      "description": "When the review was last updated"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the review"
    },
    "language": {
      "type": "string",
      "description": "Review language"
    },
    "purchaseVerified": {
      "type": "boolean",
      "description": "Whether the purchase was verified"
    },
    "recommendation": {
      "type": "string",
      "enum": ["Recommended", "Not Recommended", "Neutral"],
      "description": "Overall recommendation"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Review tags or categories"
    }
  },
  "required": ["id", "text", "rating", "author", "itemReviewed", "url"],
  "additionalProperties": false
}

