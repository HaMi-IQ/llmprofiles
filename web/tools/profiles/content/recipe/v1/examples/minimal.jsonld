  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "position": 1,
      "text": "Analyze your content and select the appropriate LLM Profile (Article, Product, JobPosting, etc.)"
    },
    {
      "@type": "HowToStep", 
      "position": 2,
      "text": "Add @context and @type fields according to the selected profile"
    },
    {
      "@type": "HowToStep",
      "position": 3,
      "text": "Include stable @id for entity identification and future referencing"
    },
    {
      "@type": "HowToStep",
      "position": 4,
      "text": "Specify inLanguage for better language targeting by AI systems"
    },
    {
      "@type": "HowToStep",
      "position": 5,
      "text": "Add sameAs links for disambiguation and authority linking"
    },
    {
      "@type": "HowToStep",
      "position": 6,
      "text": "Structure your content data according to the profile requirements"
    },
    {
      "@type": "HowToStep",
      "position": 7,
      "text": "Add conformsTo property pointing to the LLM Profile specification"
    },
    {
      "@type": "HowToStep",
      "position": 8,
      "text": "Validate your JSON-LD against the profile schema using validation tools"
    },
    {
      "@type": "HowToStep",
      "position": 9,
      "text": "Embed the validated JSON-LD in your webpage head section using script tags"
    },
    {
      "@type": "HowToStep",
      "position": 10,
      "text": "Test with AI systems and monitor improved content understanding and visibility"
    }
