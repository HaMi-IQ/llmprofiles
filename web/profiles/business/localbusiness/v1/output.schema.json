{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmprofiles.org/profiles/business/localbusiness/v1/output.schema.json",
  "title": "Local Business Extracted Content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the business"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Business name"
    },
    "description": {
      "type": "string",
      "description": "Business description"
    },
    "category": {
      "type": "string",
      "description": "Business category or type"
    },
    "address": {
      "type": "object",
      "required": ["street", "city"],
      "properties": {
        "street": {
          "type": "string",
          "description": "Street address"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "state": {
          "type": "string",
          "description": "State or province"
        },
        "postalCode": {
          "type": "string",
          "description": "Postal code"
        },
        "country": {
          "type": "string",
          "description": "Country"
        }
      }
    },
    "coordinates": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Latitude coordinate"
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Longitude coordinate"
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string",
          "description": "Phone number"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Website URL"
        }
      }
    },
    "hours": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["day", "open", "close"],
        "properties": {
          "day": {
            "type": "string",
            "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
            "description": "Day of the week"
          },
          "open": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Opening time (HH:MM)"
          },
          "close": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Closing time (HH:MM)"
          },
          "closed": {
            "type": "boolean",
            "description": "Whether the business is closed on this day"
          }
        }
      },
      "description": "Business hours"
    },
    "services": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Services offered by the business"
    },
    "paymentMethods": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Accepted payment methods"
    },
    "rating": {
      "type": "object",
      "properties": {
        "average": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Average rating"
        },
        "count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of reviews"
        }
      }
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the business page"
    },
    "image": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Business image URL"
        },
        "alt": {
          "type": "string",
          "description": "Image alt text"
        }
      }
    },
    "established": {
      "type": "string",
      "format": "date",
      "description": "When the business was established"
    },
    "owner": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Owner name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Owner email"
        }
      }
    }
  },
  "required": ["id", "name", "address", "url"],
  "additionalProperties": false
}

