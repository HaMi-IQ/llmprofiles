{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmprofiles.org/profiles/content/article/v1/output.schema.json",
  "title": "Article Extracted Content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the article"
    },
    "headline": {
      "type": "string",
      "minLength": 3,
      "description": "Article headline or title"
    },
    "subheadline": {
      "type": "string",
      "description": "Article subtitle or summary"
    },
    "content": {
      "type": "string",
      "minLength": 10,
      "description": "Main article content or body text"
    },
    "excerpt": {
      "type": "string",
      "description": "Short excerpt or summary of the article"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Author's name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Author's profile URL"
        },
        "bio": {
          "type": "string",
          "description": "Author's biography"
        }
      },
      "required": ["name"]
    },
    "publisher": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Publisher name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Publisher website"
        }
      },
      "required": ["name"]
    },
    "dates": {
      "type": "object",
      "properties": {
        "published": {
          "type": "string",
          "format": "date-time",
          "description": "Publication date"
        },
        "modified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification date"
        }
      },
      "required": ["published"]
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the article"
    },
    "image": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Featured image URL"
        },
        "alt": {
          "type": "string",
          "description": "Image alt text"
        },
        "caption": {
          "type": "string",
          "description": "Image caption"
        }
      }
    },
    "category": {
      "type": "string",
      "description": "Article category or section"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Article tags or keywords"
    },
    "readingTime": {
      "type": "integer",
      "minimum": 1,
      "description": "Estimated reading time in minutes"
    },
    "wordCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of words in the article"
    }
  },
  "required": ["id", "headline", "content", "author", "publisher", "dates", "url"],
  "additionalProperties": false
}

