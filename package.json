{
  "name": "llmprofiles",
  "version": "1.0.0",
  "description": "Profile Registry & Remote Context Graphs for LLM-friendly structured data",
  "main": "index.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/HaMi-IQ/llmprofiles.git"
  },
  "homepage": "https://llmprofiles.org",
  "keywords": [
    "llm",
    "ai",
    "structured-data",
    "json-ld",
    "schema.org",
    "skos",
    "shacl",
    "json-schema",
    "semantic-web",
    "profiles"
  ],
  "author": "HAMI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HaMi-IQ/llmprofiles/issues"
  },
  "scripts": {
    "validate": "npm run validate:json && npm run validate:schemas",
    "validate:json": "node scripts/validate-json.js",
    "validate:schemas": "node scripts/validate-schemas.js",
    "test": "npm run validate",
    "build": "npm run validate",
    "build:docs": "node scripts/enhanced-build-docs.js",
    "build:docs:legacy": "node scripts/build-docs.js",
    "build:md": "node scripts/convert-md-to-html.js batch",
    "build:home": "node scripts/generate-home-page.js",
    "generate-images": "node scripts/create-generic-image-files.js",
    "create-readmes": "node scripts/create-profile-readmes.js",
    "generate-api": "node scripts/generate-api.js",
    "api:server": "node web/api/server.js",
    "test-well-known": "node scripts/test-well-known.js",
    "test-ci": "node scripts/test-ci-validation.js",
    "docs": "echo 'Documentation is in the docs/ directory'",
    "lint": "npm run validate:json",
    "format": "prettier --write \"**/*.json\" \"**/*.jsonld\" \"**/*.md\"",
    "check": "npm run validate && npm run lint",
    "changelog": "node scripts/generate-changelog.js",
    "release:prepare": "node scripts/manage-release.js prepare",
    "release:status": "node scripts/manage-release.js status",
    "release:patch": "node scripts/manage-release.js prepare --type patch",
    "release:minor": "node scripts/manage-release.js prepare --type minor",
    "release:major": "node scripts/manage-release.js prepare --type major",
    "build:viewer": "node scripts/generate-profile-viewer.js",
    "ci:full": "npm run validate && npm run build:home && npm run build:docs && npm run build:viewer && npm run build:md && npm run generate-api && npm run create-readmes && npm run generate-images",
    "structure:validate": "node scripts/validate-structure.js",
    "structure:report": "node scripts/validate-structure.js --json",
    "links:validate": "node scripts/validate-links.js",
    "links:fix": "node scripts/validate-links.js fix",
    "links:report": "node scripts/validate-links.js report",
    "build:profiles": "node scripts/build-profiles.js",
    "validate:structure": "node scripts/validate-structure.js",
    "clean:gh-pages": "node scripts/clean-gh-pages.js",
    "build:npm": "node scripts/build-npm-package.js",
    "publish:npm": "npm run build:npm && cd npm-package && npm publish",
    "publish:npm:dry": "npm run build:npm && cd npm-package && npm publish --dry-run"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "prettier": "^3.0.0",
    "marked": "^9.1.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "*.json",
    "*.jsonld",
    "profiles/",
    "schemas/",
    "examples/",
    "training/",
    "tools/",
    "docs/",
    "web/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE-CODE",
    "LICENSE-CONTENT"
  ],
  "publishConfig": {
    "access": "public"
  }
}