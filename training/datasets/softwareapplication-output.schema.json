{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmprofiles.org/profiles/technology/softwareapplication/v1/output.schema.json",
  "title": "Software Application Extracted Content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the software"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Software name"
    },
    "description": {
      "type": "string",
      "description": "Software description"
    },
    "category": {
      "type": "string",
      "description": "Application category"
    },
    "developer": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Developer name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Developer website"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Developer email"
        }
      }
    },
    "version": {
      "type": "string",
      "description": "Software version"
    },
    "releaseDate": {
      "type": "string",
      "format": "date",
      "description": "Release date"
    },
    "operatingSystem": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Supported operating systems"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Desktop", "Mobile", "Web", "Tablet"]
      },
      "description": "Supported platforms"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Software features"
    },
    "requirements": {
      "type": "object",
      "properties": {
        "minimum": {
          "type": "object",
          "properties": {
            "ram": {
              "type": "string",
              "description": "Minimum RAM requirement"
            },
            "storage": {
              "type": "string",
              "description": "Minimum storage requirement"
            },
            "processor": {
              "type": "string",
              "description": "Minimum processor requirement"
            }
          }
        },
        "recommended": {
          "type": "object",
          "properties": {
            "ram": {
              "type": "string",
              "description": "Recommended RAM"
            },
            "storage": {
              "type": "string",
              "description": "Recommended storage"
            },
            "processor": {
              "type": "string",
              "description": "Recommended processor"
            }
          }
        }
      },
      "description": "System requirements"
    },
    "pricing": {
      "type": "object",
      "properties": {
        "model": {
          "type": "string",
          "enum": ["Free", "Freemium", "Paid", "Subscription", "One-time"],
          "description": "Pricing model"
        },
        "price": {
          "type": "number",
          "minimum": 0,
          "description": "Price"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Currency code"
        },
        "trial": {
          "type": "string",
          "description": "Trial period"
        }
      }
    },
    "downloads": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url", "platform"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Download URL"
          },
          "platform": {
            "type": "string",
            "description": "Platform (Windows, macOS, Linux, iOS, Android)"
          },
          "size": {
            "type": "string",
            "description": "File size"
          },
          "version": {
            "type": "string",
            "description": "Version for this platform"
          }
        }
      },
      "description": "Download links"
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Screenshot URL"
          },
          "alt": {
            "type": "string",
            "description": "Screenshot description"
          }
        },
        "required": ["url"]
      },
      "description": "Application screenshots"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Supported languages"
    },
    "license": {
      "type": "string",
      "description": "Software license"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the software page"
    },
    "rating": {
      "type": "object",
      "properties": {
        "average": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Average rating"
        },
        "count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of reviews"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Software tags or keywords"
    }
  },
  "required": ["id", "name", "developer", "url"],
  "additionalProperties": false
}

