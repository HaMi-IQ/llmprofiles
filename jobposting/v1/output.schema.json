{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmprofiles.org/jobposting/v1/output.schema.json",
  "title": "Job Posting Extracted Content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the job posting"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Job title"
    },
    "description": {
      "type": "string",
      "description": "Job description"
    },
    "company": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Company name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Company website"
        },
        "logo": {
          "type": "string",
          "format": "uri",
          "description": "Company logo URL"
        }
      }
    },
    "location": {
      "type": "object",
      "required": ["city"],
      "properties": {
        "city": {
          "type": "string",
          "description": "City"
        },
        "state": {
          "type": "string",
          "description": "State or province"
        },
        "country": {
          "type": "string",
          "description": "Country"
        },
        "isRemote": {
          "type": "boolean",
          "description": "Whether the job is remote"
        },
        "isHybrid": {
          "type": "boolean",
          "description": "Whether the job is hybrid"
        }
      }
    },
    "employmentType": {
      "type": "string",
      "enum": ["Full-time", "Part-time", "Contract", "Temporary", "Internship"],
      "description": "Type of employment"
    },
    "experienceLevel": {
      "type": "string",
      "enum": ["Entry", "Mid", "Senior", "Executive"],
      "description": "Required experience level"
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Job requirements and qualifications"
    },
    "responsibilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Job responsibilities and duties"
    },
    "benefits": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Job benefits and perks"
    },
    "salary": {
      "type": "object",
      "properties": {
        "min": {
          "type": "number",
          "minimum": 0,
          "description": "Minimum salary"
        },
        "max": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum salary"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Currency code"
        },
        "period": {
          "type": "string",
          "enum": ["hourly", "monthly", "yearly"],
          "description": "Salary period"
        }
      }
    },
    "application": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Application URL"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Application email"
        },
        "deadline": {
          "type": "string",
          "format": "date",
          "description": "Application deadline"
        }
      }
    },
    "postedDate": {
      "type": "string",
      "format": "date",
      "description": "When the job was posted"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the job posting"
    },
    "department": {
      "type": "string",
      "description": "Department or team"
    },
    "industry": {
      "type": "string",
      "description": "Industry or sector"
    }
  },
  "required": ["id", "title", "company", "location", "url"],
  "additionalProperties": false
}

